# =============================================================================
# Application Configuration (必須)
# =============================================================================
# アプリケーション名
APP_NAME="Simutrans Addon Portal"
# 実行環境: local, staging, production
APP_ENV=local
# 暗号化キー (必須 - php artisan key:generate で生成)
APP_KEY=
# デバッグモード (本番環境では false にすること)
APP_DEBUG=true
# アプリケーションURL
APP_URL=http://localhost

# =============================================================================
# Logging (オプション)
# =============================================================================
# Slack Webhook URL (エラー通知用)
LOG_SLACK_WEBHOOK_URL=

# =============================================================================
# Database Configuration (必須)
# =============================================================================
# データベースホスト
DB_HOST=127.0.0.1
# データベースポート
DB_PORT=3306
# データベース名
DB_DATABASE=v2_portal
# データベースユーザー名
DB_USERNAME=root
# データベースパスワード
DB_PASSWORD=root
# テスト用データベース名
TEST_DB_DATABASE=test

# =============================================================================
# Driver Configuration (必須)
# =============================================================================
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
QUEUE_CONNECTION=sync

# =============================================================================
# Mail Configuration (必須 - 開発環境では mailpit 推奨)
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025

# =============================================================================
# External Services (オプション - 連携機能に必要)
# =============================================================================

# Dropbox (バックアップ用)
DROPBOX_AUTHORIZATION_TOKEN=

# MySQL Dump (バックアップ用バイナリパス)
DUMP_BINARY_PATH=mysqldump

# Google Analytics (アクセス解析用)
GTAG=

# Google reCAPTCHA (スパム対策用)
GOOGLE_RECAPTCHA_PROJECT_NAME=
GOOGLE_RECAPTCHA_SITE_KEY=
GOOGLE_RECAPTCHA_CREDENTIAL=

# OneSignal (プッシュ通知用)
ONESIGNAL_APP_ID=
ONESIGNAL_REST_API_KEY=

# Discord (通知連携用)
DISCORD_TOKEN=
DISCORD_CHANNEL=

# Twitter / X (SNS連携用)
TWITTER_BEARER_TOKEN=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_CONSUMER_KEY=
TWITTER_CONSUMER_SECRET=

# Misskey (SNS連携用)
MISSKEY_TOKEN=

# BlueSky (SNS連携用)
BLUESKY_USER=
BLUESKY_PASSWORD=

