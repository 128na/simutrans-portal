# ==============================================================================
# アプリケーション設定（必須）
# ==============================================================================
# string: アプリケーション名
APP_NAME="Simutrans Addon Portal"
# string: 実行環境（local/staging/production）
APP_ENV=local
# string: 暗号化キー（必須 - `php artisan key:generate` で生成）
APP_KEY=
# boolean: デバッグモード（本番環境では false を推奨）
APP_DEBUG=true
# string: アプリケーションのベースURL
APP_URL=http://localhost

# ==============================================================================
# ログ設定（オプション）
# ==============================================================================
# string|null: Slack通知用のWebhook URL（オプション）
LOG_SLACK_WEBHOOK_URL=

# ==============================================================================
# データベース設定（必須）
# ==============================================================================
# string: MySQLホスト
DB_HOST=127.0.0.1
# integer: MySQLポート
DB_PORT=3306
# string: データベース名
DB_DATABASE=v2_portal
# string: データベースユーザー名
DB_USERNAME=root
# string: データベースパスワード
DB_PASSWORD=root
# string: テスト用データベース名
TEST_DB_DATABASE=test

# ==============================================================================
# ドライバ設定
# ==============================================================================
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
QUEUE_CONNECTION=sync

# ==============================================================================
# メール設定（必須）
# ==============================================================================
# string: メールドライバー（smtp/log等）
MAIL_MAILER=smtp
# string: SMTPホスト（mailpit等）
MAIL_HOST=localhost
# integer: SMTPポート
MAIL_PORT=1025

# ==============================================================================
# 外部サービス連携（すべてオプション）
# ==============================================================================

# ------------------------------------------------------------------------------
# Dropbox（バックアップ用）
# ------------------------------------------------------------------------------
# string|null: Dropbox APIの認証トークン
DROPBOX_AUTHORIZATION_TOKEN=
# string: mysqldumpコマンドのパス
DUMP_BINARY_PATH=mysqldump

# ------------------------------------------------------------------------------
# Google Services
# ------------------------------------------------------------------------------
# string|null: Google Analytics測定ID（例: G-XXXXXXXXXX）
GTAG=
# string|null: reCAPTCHA Enterprise プロジェクト名
GOOGLE_RECAPTCHA_PROJECT_NAME=
# string|null: reCAPTCHA Enterprise サイトキー（フロントエンド用）
GOOGLE_RECAPTCHA_SITE_KEY=
# string|null: reCAPTCHA Enterprise 認証情報ファイルパス
GOOGLE_RECAPTCHA_CREDENTIAL=

# ------------------------------------------------------------------------------
# OneSignal（プッシュ通知用）
# ------------------------------------------------------------------------------
# string|null: OneSignal アプリケーションID
ONESIGNAL_APP_ID=
# string|null: OneSignal REST APIキー
ONESIGNAL_REST_API_KEY=

# ------------------------------------------------------------------------------
# Discord連携
# ------------------------------------------------------------------------------
# string|null: Discord Bot トークン
DISCORD_TOKEN=
# string|null: Discord チャンネルID
DISCORD_CHANNEL=

# ------------------------------------------------------------------------------
# Twitter連携
# ------------------------------------------------------------------------------
# string|null: Twitter OAuth Bearer Token
TWITTER_BEARER_TOKEN=
# string|null: Twitter OAuth Client ID
TWITTER_CLIENT_ID=
# string|null: Twitter OAuth Client Secret
TWITTER_CLIENT_SECRET=
# string|null: Twitter Consumer Key
TWITTER_CONSUMER_KEY=
# string|null: Twitter Consumer Secret
TWITTER_CONSUMER_SECRET=

# ------------------------------------------------------------------------------
# Misskey連携
# ------------------------------------------------------------------------------
# string|null: Misskey APIトークン
MISSKEY_TOKEN=

# ------------------------------------------------------------------------------
# BlueSky連携
# ------------------------------------------------------------------------------
# string|null: BlueSky ユーザー名
BLUESKY_USER=
# string|null: BlueSky パスワード
BLUESKY_PASSWORD=

